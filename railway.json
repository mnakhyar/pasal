{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "dockerfilePath": "apps/mcp-server/Dockerfile",
    "watchPatterns": ["apps/mcp-server/**"]
  },
  "deploy": {
    "startCommand": "python server.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
